@model FridgesWebApp.Models.UserForRegistration

@{
    ViewData["Title"] = "Registration";
}

<script type="text/javascript">
    document.body.style.backgroundImage = "url('../Images/authorization.jpg')";
</script>

<div class="text-center"><h1>Registration</h1></div>
<hr />
<div class="row">
    <div class="col d-flex justify-content-center align-items-center">
        <form asp-action="Registration">
            <img src="~/Images/Avatar.png" alt="Sample Photo" width="210" height="165" />
            <div class="form-group text-center">
                <label asp-for="FirstName" class="control-label text-white"></label>
                <input asp-for="FirstName" placeholder="Enter Firstname" class=" form-control" style="height:45px" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="LastName" class="control-label text-white"></label>
                <input asp-for="LastName" placeholder="Enter Lastname" class=" form-control" style="height:45px" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="UserName" class="control-label text-white"></label>
                <input asp-for="UserName" placeholder="Enter Username" class=" form-control" style="height:45px" required />
            </div>
            <div class="form-group text-center">
                <label asp-for="Password" class="control-label text-white"></label>
                <input type="password" input placeholder="Enter Password" asp-for="Password" class=" form-control" style="height:45px" required />
            </div>
            <div class="form-group text-center">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" placeholder="Enter Email" class=" form-control" style="height:45px" required />
            </div>
            <div class="form-group text-center">
                <label asp-for="PhoneNumber" class="control-label text-white"></label>
                <input asp-for="PhoneNumber" placeholder="Enter Phonenumber" class=" form-control" style="height:45px" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign up" class="btn btn-primary" />
            </div>
            <div>
                <a class="text-white" asp-controller="Home" asp-action="Index">Back Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

